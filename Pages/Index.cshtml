@page
@model MyRazorApp.Pages.Index

<!DOCTYPE html>

<html>
    <body>
        <div>
            <table>
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>Title</td>
                        <td>Price</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Title</td>
                            <td>@category.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>
</html>